<body>
  <div class="login-container">
    <h1>MDA Education</h1>
    <input type="email" id="email" placeholder="Email Address" required>
    <input type="text" id="pcId" placeholder="PC ID (e.g., pc01)" required>
    <input type="text" id="project" placeholder="Project" required>
    <input type="text" id="homework" placeholder="Home Work" required>
    <button onclick="submitForm()">Submit</button>
    <p id="message"></p>
  </div>

  <script>
    async function submitForm() {
      const email = document.getElementById('email').value;
      const pcId = document.getElementById('pcId').value;
      const project = document.getElementById('project').value;
      const homework = document.getElementById('homework').value;

      // Validate PC ID format
      if (!/^pc(0[1-9]|1[0-9]|2[0-1])$/i.test(pcId)) {
        document.getElementById('message').innerText = 'Invalid PC ID. Must be pc01 to pc21.';
        return;
      }

      // Submit data to Google Apps Script
      const response = await saveData(email, pcId, project, homework);

      if (response.success) {
        document.getElementById('message').innerText = response.message;
        document.getElementById('message').style.color = '#28a745';
      } else {
        document.getElementById('message').innerText = response.message;
        document.getElementById('message').style.color = '#d9534f';
      }
    }

    async function saveData(email, pcId, project, homework) {
      const url = 'YOUR_GOOGLE_APPS_SCRIPT_URL'; // Replace with your Apps Script URL
      const data = { email, pcId, project, homework };

      const response = await fetch(url, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(data),
      });

      return response.json();
    }
  </script>
</body>
